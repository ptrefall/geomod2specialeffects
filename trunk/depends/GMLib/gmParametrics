/*! \file gmParametrics
 *
 *  C++ interface for the GMlib Parametrics headers and the relative classes
 *
 *  \date   2008-09-07
 */


// The base class of all subclasses of Parameterized Curvss, Surfaces, Volumes, Flows, ..., ..., etc.
#include "gmParametrics.h"


// Direct subclasses of Parametrics
#include "gmPCurve"                 // Curve
#include "gmPSurf"                  // Surface
#include "gmPTriangle"              // Triangle

// Parametric Curves
#include "gmPArc"                   // An Arc
#include "gmPBSplineCurve"          // BSpline curve
#include "gmPBasisCurve"            // A curve which can visualize a basis
#include "gmPBezierCurve"           // Bezier curve
#include "gmPButterfly"             // The so called "Butterfly" curve
#include "gmPChrysanthemumCurve"    // The Chrysanthemum cuve
#include "gmPCircle"                // Circle
#include "gmPERBSCurve"             // Expo Rational BSpline curve
#include "gmPRoseCurve"             // Rose curve

// Parametric Tensor Product Surfaces
#include "gmPApple"                 // Apple
#include "gmPAsteroidalSphere"      // Asteroidal Sphere
#include "gmPBezierSurf"            // Bezier Surface
#include "gmPCircularSurface"       // Circular Surface
#include "gmPCylinder"              // Cylinder
#include "gmPERBSSurf"              // Expo Rational BSpline Surface
#include "gmPPlane"                 // Plane
#include "gmPSphere"                // Sphere
#include "gmPSteinerSurf"           // The Steiner Surface
#include "gmPTorus"                 // Torus Surface

// Parametric Triangle Surfaces
#include "gmPBezierTriangle"        // Bezier Triangle
#include "gmPERBSTriangle"          // Expo Rational BSpline Triangle

// Trasformation
#include "gmPTCurve"                // Transformable TCurve (special curve)

// Scriptable
#include "gmPLuaScriptCurve"        // Lua scriptable curve
#include "gmPLuaScriptSurf"         // Lua scriptable surface
