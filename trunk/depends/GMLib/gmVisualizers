/*! \file gmVisualizers
 *
 *  C++ interface for the GMlib Visualizer headers and the relative classes
 *  for Displayable Curves and Surfaces.
 *
 *  \date   2008-09-15
 */


// Visualizer Base Classes
#include "gmVisualizer"
#include "gmPCurveVisualizer"               // PCurve Visualizer Base
#include "gmPSurfVisualizer"                // PSurf Visualizer Base
#include "gmPTriangleVisualizer"            // PTriangleVisualizer Base


// Visualizers

// PCurve Visualizers( non-glsl )
#include "gmPCurveContoursVisualizer"       // PCurve Contours Visualizer
#include "gmPCurveDerivativesVisualizer"    // PCurve Derivatives Visualizer
#include "gmPCurvePointsVisualizer"         // PCurve Points Visualizer

// PSurf Visualizers( non-glsl )
#include "gmPSurfContoursVisualizer"        // PSurf Contours Visualizer
#include "gmPSurfDerivativesVisualizer"     // PSurf Derivatives Visualizer
#include "gmPSurfNormalsVisualizer"         // PSurf Normals Visualizer
#include "gmPSurfPointsVisualizer"          // PSurf Points Visualizer

// PTriangle visualizers( non-glsl )
#include "gmPTriangleColorVisualizer"       // PTriangle Color Visualizer
#include "gmPTriangleColorPointVisualizer"  // PTriangle Color-Point Visualizer

// PCurve GLSL Visualizer
#include "gmPCurveGLSLVisualizer"           // PCurve GLSL Visualizer

// PSurf GLSL Visualizer
#include "gmPSurfGLSLVisualizer"            // PSurf GLSL Visualizer


